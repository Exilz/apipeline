{
    "compilerOptions": {
        "target": "es5",
        "baseUrl": "./",
        "lib": ["es2015", "dom"],
        "pretty": true,
        "jsx": "react-native",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "allowJs": true,
        "sourceMap": false,
        "alwaysStrict": true,
        "strictNullChecks": false,
        "noUnusedLocals": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "demo",
        "__tests__"
    ]
}
